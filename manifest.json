{
    "manifest_version": 2,
    "name": "VSTS Hotkeys",
    "description": "Add tooltips to buttons that show their current hotkeys. Adds a few additional hotkeys",
    "version": "1.0.4",
    "permissions": [
        "activeTab",
        "storage",
        "https://ajax.googleapis.com/"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "web_accessible_resources" : ["/dist/vstsHotkeys.js"],
    "content_scripts": [
        {
            "matches": [
                "https://*.visualstudio.com/*"
            ],
            "css": [],
            "js": [
                "dist/vstsHotkeyInjection.js"
            ]
        }
    ]
}